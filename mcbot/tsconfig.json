{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",   // 编译输出目录
    "rootDir": "./src"    // 源代码目录
  },
  "include": ["src/**/*"] // 需编译的文件
}
